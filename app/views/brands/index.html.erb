<h1 class="text-center">Brands</h1>

<div class="container">
<a href="brands/new" class="btn btn-primary">New Brand</a>
  <table class="table">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Title</th>
      </tr>
    </thead>
    <tbody>
    <% @brands.each do |brand| %>
      <tr>
        <th scope="row"><%= brand.id %></th>
        <td> <%= link_to brand.title, brand %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
