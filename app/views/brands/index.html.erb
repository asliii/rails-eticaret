<h1 class="text-center">Brands</h1>

<div class="container">
<a href="brands/new" class="btn btn-success"><i class="fas fa-plus"></i> New Brand</a>
  <table class="table">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Title</th>
        <th scope="col">Operations</th>
      </tr>
    </thead>
    <tbody>
    <% @brands.each do |brand| %>
      <tr>
        <th scope="row"><%= brand.id %></th>
        <td> <%= link_to brand.title, brand %></td>
        <td scope="col">
          <%= link_to '<i class="fa fa-edit"></i>'.html_safe, edit_brand_path(brand), {:class=>'btn btn-warning'} %>
          <%= link_to '<i class="fa fa-trash"></i>'.html_safe, brand_path(brand),
                        method: :delete,
                        data: { confirm: "Are you sure?" }, class:'btn btn-danger' %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
